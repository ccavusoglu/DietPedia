<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/meal_morning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPaddingBottom="12dp"
        card_view:contentPaddingTop="12dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="3dp">
    <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/cv_diet_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@drawable/food_48"
        />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/cv_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Morning"/>

            <TextView
                    android:id="@+id/cv_meal_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="15sp"
                    android:text="Desc"
            />

            <TextView
                    android:id="@+id/cv_meal_snack1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Snack 1"/>

            <TextView
                    android:id="@+id/cv_meal_snack1_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="13sp"
                    android:text="Desc"
            />

            <TextView
                    android:id="@+id/cv_meal_snack2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Snack 2"/>

            <TextView
                    android:id="@+id/cv_meal_snack2_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.9"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="13sp"
                    android:text="Desc"
            />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
